<div class="modal" tabindex="-1" role="dialog" id="venda-produto-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cadastro de Produto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">

                        <div class="form-group">
                            <label for="modal-produto-nome">Nome</label>
                            <input type="text" class="form-control" id="modal-produto-nome" />
                        </div>

                        <div class="form-group">
                            <label for="modal-produto-quantidade">Quantidade</label>
                            <input type="number"
                                   id="modal-prioduto-quantidade"
                                   class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="modal-produto-valor">Valor</label>
                            <input class="form-control" id="modal-produto-valor" />
                        </div>

                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-success">Salvar</button>
                    </div>

                </div>
            </div>
        </div>



    </div>
</div>
