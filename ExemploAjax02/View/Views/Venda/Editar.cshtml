
@{
    ViewBag.Title = "Editar";
}

<div class="row">
    <div class="col-5">
        <form action="/venda/editar" method="post">
            <input type="hidden" name="id" />
            <div class="form-group">
                <label id="venda-cliente">Cliente</label>
                <select class="form-control"
                        id="venda-cliente"
                        name="idCliente"></select>
            </div>
            <div class="form-group">
                <label id="venda-descricao">Descrição</label>
                <textarea 
                    class="form-control"
                    id="venda-descricao"
                    name="descricao"></textarea>

            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>

    </div>

    <div class="col-7">
        <h5 class="text-primary">Lista de Produtos</h5>
        <a 
           class="btn btn-outline-primary float-right mb-2"
           data-toggle="modal"
           data-target="#venda-produto-modal"
           >Adicionar</a>

        <table class="table table-striped table-hover table-hover" id="venda-produtos-index">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Quantidade</th>
                    <th>Preço</th>
                    <th>Ação</th>
                </tr>
            </thead>
        </table>
    </div>

</div>

@RenderPage("ProdutoModal.cshtml")
